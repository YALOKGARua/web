{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ESNext",
        "outDir": "./js",
        "rootDir": "./js",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["ES2017", "DOM"],
        "moduleResolution": "node"
    },
    "include": ["js/**/*"],
    "exclude": ["node_modules"]
}