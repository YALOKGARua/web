{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "outDir": "./dist/js",
        "rootDir": "./src/ts",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "moduleResolution": "node",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": ["src/ts/**/*"],
    "exclude": ["node_modules", "dist"]
}