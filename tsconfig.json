{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "outDir": "./js",
        "rootDir": "./js",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["ES2017", "DOM"]
    },
    "include": ["js/**/*"],
    "exclude": ["node_modules"]
}